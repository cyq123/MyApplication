<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".AnimaterVectorDrawableActivity">
    <!-- 选转的三角形动画，background属性是动画drawable-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="383dp"
        android:layout_height="259dp"
        android:background="@drawable/animatedvectordrawable" />

    <ImageView
        android:id="@+id/animate_img"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:background="@drawable/animatorvectordrawable2" />
</android.support.constraint.ConstraintLayout>